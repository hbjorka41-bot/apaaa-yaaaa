  <title>balikan</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      text-align: center;
      overflow: hidden;
      background: linear-gradient(270deg, #d6c3ff, #a07cff, #7b5fc8, #9b7de1);
      background-size: 600% 600%;
      animation: gradientMove 15s ease infinite;
    }

    @keyframes gradientMove {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    h1 {
      margin-bottom: 20px;
      font-weight: normal;
      color: #2e2e2e;
      position: relative;
      z-index: 2;
    }
    .btn {
      padding: 12px 20px;
      margin: 10px;
      font-size: 16px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s;
      position: relative;
      z-index: 2;
    }
    .yes {
      background-color: #6a4cdb;
      color: white;
    }
    .yes:hover {
      background-color: #573bb8;
    }
    .no {
      background-color: #c43d4b;
      color: white;
      position: absolute;
      z-index: 2;
    }
    #thanks {
      display: none;
      font-size: 24px;
      margin-top: 20px;
      color: #2e2e2e;
      opacity: 0;
      animation: fadeIn 2s forwards, pulse 1.5s infinite ease-in-out;
      position: relative;
      z-index: 2;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    canvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
    }
